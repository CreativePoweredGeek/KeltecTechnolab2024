{% spaceless %}
{% if rows|length > 0 %}
	{#
		grid_option_1 is "Show grid in row"
		Not defined = don't show in row, make a link to it
	#}
	{% if settings.grid_option_1 is not defined %}
		<a rel="modal-e_{{entry_id}}_f_{{field_id}}" class="m-link" href="">{{'show_grid'|t}}</a>
		<div class="modal-wrap modal-e_{{entry_id}}_f_{{field_id}}">
			<div class="modal">
				<div class="col-group">
					<div class="col w-16">
						<a class="m-close" href="#"></a>
	{% endif %}

							<table class="mainTable matrixTable" cellspacing="0" cellpadding="0" border="0">
								<thead>
								<tr>
									{% for column in columns %}
										<th>{{column.col_label}}</th>
									{% endfor %}
								</tr>
								</thead>
								<tbody>
								{% for row in rows %}
									<tr>
										{% for key, item in row if 'col_id_' in key %}
											{% set col_id = key|slice(7) %}
											{% for k, col in columns if col.col_id == col_id %}
												{% set col_type = col.col_type %}
												<td>
														{% if col_type == 'file' %}
															<img src="{{item}}" width="100px" />
														{% else %}
															{{item|default('-')}}
														{% endif %}
												</td>
											{% endfor %}
										{% endfor %}
									</tr>
								{% endfor %}
								</tbody>
							</table>

	{% if settings.grid_option_1 is not defined %}
					</div>
				</div>
			</div>
		</div>
	{% endif %}
{% endif %}
{% endspaceless %}