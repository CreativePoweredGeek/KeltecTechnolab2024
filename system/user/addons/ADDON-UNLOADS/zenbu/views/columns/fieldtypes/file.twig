{% if file %}
	{% if file.isImage() %}
		<a rel="modal-e_{{entry.entry_id}}_f_{{field_id}}" class="m-link" href="">
			<img src="{{ filepath }}" alt="">
		</a>
		<div class="modal-wrap modal-e_{{entry.entry_id}}_f_{{field_id}}">
			<div class="modal">
				<div class="col-group">
					<div class="col w-16">
						<a class="m-close" href="#"></a>
						<div class="box">
							<h1>{{ file.title }}</h1>
							<img src="{{ file.getAbsoluteURL() }}" alt="">
						</div>
					</div>
				</div>
			</div>
		</div>
	{% else %}
		<a href="{{ file.getAbsoluteURL() }}">{{ file.title }} {% if file.file_name != file.title %}({{ file.file_name }}){% endif %}</a>
	{% endif %}
{% else %}
	{{ "no_file"|t }}
{% endif %}
