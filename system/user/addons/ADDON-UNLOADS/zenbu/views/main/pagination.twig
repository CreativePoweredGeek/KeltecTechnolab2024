<div class="paginate">
    <ul>
    {% for index, page in pagination.pages %}
        <li><a href="{{page}}">{{index}}</a></li>
    {% endfor %}
    </ul>
</div>

{% if total_results > 0 %}

{% set resultWord = total_results > 1 ? ' results' : ' result' %}

<p>{{ "Showing results "|t ~ results_from ~ " to "|t ~ results_to ~ " out of "|t ~ total_results ~ resultWord|t}}</p>

{{pagination}}

{% endif %}